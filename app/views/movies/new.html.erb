<style>
  body {
    background-color: #0b0b0d;
    color: #f8f8f8;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
  }

  h1 {
    color: #ff4d4d;
    text-shadow: 0 0 12px #ff1a75;
  }

  .form-card {
    background: linear-gradient(160deg, #1a1a1a, #111);
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 0 25px rgba(255, 0, 0, 0.25);
    transition: all 0.3s ease;
  }

  .form-card:hover {
    box-shadow: 0 0 35px rgba(255, 0, 0, 0.35);
  }

  .btn-primary {
    background: linear-gradient(90deg, #ff4d4d, #ff1a75);
    border: none;
    box-shadow: 0 0 10px #ff1a75;
    font-weight: 500;
  }
  .btn-primary:hover {
    background: linear-gradient(90deg, #ff1a75, #ff4d4d);
    transform: scale(1.03);
  }

  .btn-secondary {
    background-color: #333;
    color: #ccc;
  }
  .btn-secondary:hover {
    background-color: #444;
    color: #fff;
  }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Movie</h1>
  <%= link_to movies_path, class: 'btn btn-secondary' do %>
    <i class="bi bi-arrow-left"></i> Back to Movies
  <% end %>
</div>

<div class="form-card">
  <%= render 'form' %>
</div>
